<div class="bad-melon">
  <form>
    <div class="form-group bordered" style="max-width: 500px;">
      <span class="form-group-title">Bordered Form Group</span>
      {{#each inputs }}
        <div class="form-field {{ classes }}">
          <label for="{{ id }}">{{ name }}</label>
          <{{ atom }} type="{{ type }}" id="{{ id }}" name="{{ id }}" placeholder="{{ example }}"></{{ atom }}>
        </div>
      {{/each}}
    </div>
  </form>
</div>